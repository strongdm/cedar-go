// Policy 1: OrgA Users can view Places with a reason
permit(
    principal in OrgA::Group::"engineering",
    action == OrgA::Action::"View",
    resource == Place::"headquarters"
)
when { context.reason == "work" };

// Policy 2: OrgA admins can edit any Place
permit(
    principal,
    action == OrgA::Action::"Edit",
    resource
)
when { principal.info.name == "admin" };

// Policy 3: Global view access for active users
permit(
    principal,
    action == Action::"GlobalView",
    resource
);

// Policy 4: OrgB Members can access Places
permit(
    principal is OrgB::Member,
    action == OrgB::Action::"Access",
    resource is Place
);

// Policy 5: Teams can view based on status
permit(
    principal is OrgA::Team,
    action == OrgA::Action::"View",
    resource
)
when { principal in OrgA::Group::"teams" };
